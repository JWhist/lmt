<div class='maincontainer'>
  <div class='column'>
    <h1>LEAGUE MANAGEMENT TOOL</h1>
    <img src='/images/who.jpg' style='height: 400px; width: 300px;'>
  </div>
  <div class='column'>
    <form action='/login' method='post'>
      <ul>
        <% if session[:message] %>
          <li class='message'><%= session.delete(:message) %></li>
        <% end %>
        <li>
          <label for='username'>Username:</label>
          <input class='button' type='text' name='username' placeholder='Username' required>
        </li>
        <li>
          <label for='password'>Password:</label>
          <input class='button' type='password' name='password' placeholder='Password' required>
        </li>
        <li>
          <button type='submit' class='button'>Submit</button>
          <button type='reset' onclick="location.href='/admin/new'" class='button'>Create new user</button>
        </li>
    </form>
  </div>
</div>