<h3>Create a new league:</h3>
<h5>
  <% if session[:message] %>
    <%= session.delete(:message) %>
  <% end %>
</h5>

<form action='/game/new' method='post'>
  <ul>
    <li>
      <select id="sports" name='sport' class='dropdown' required>
        <option value="" disabled selected hidden>Select a sport</option>
        <% @sports.each do |pair| %>
          <option value="<%= pair[0] %>"><%= pair[0] %></option>
        <% end %>
      </select>
    </li>
    <li>
      <select id="leagues" name='league' class='dropdown' required>
        <option value="" disabled selected hidden>Select a league</option>
      </select>
    </li>
    <li>
      <label for='hometeam'>Home team:</label>
      <select name='hometeam' id="teams" class='dropdown' required>
        <option value="" disabled selected hidden>Select a team</option>
      </select>
    </li>
    <li>
      <label for='awayteam'>Away team:</label>
      <select name='awayteam' id="teams2" class='dropdown' required>
        <option value="" disabled selected hidden>Select a team</option>
      </select>
    </li>
    <li>
      <label for='date'>Date:</label>
      <input type='date' name='date' required>
    </li>
    <li>
      <label for='venue'>Location:</label>
      <input type='text' name='venue' required>
    </li>
      <button class='button' type='submit'>Create</button>
      <button class='button' type='reset' onclick="location.href='/admin'">Back</button>
  </ul>
</form>